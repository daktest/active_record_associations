<div class="page-header">
  <% if policy(Car).new? %>
    <%= link_to new_car_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Car
    <% end %>
  <% end %>
  <h1>Listing cars</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Price</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @cars) do |car| %>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= number_to_currency(car.price) %></td>
        <% if current_user %>
          <td><%= link_to 'Claim', claim_car_path(car) %></td>
        <% end %>
        <td><%= link_to 'Show', car %></td>
        <% if policy(car).edit? %>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <% end %>
        <% if policy(car).destroy? %>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
